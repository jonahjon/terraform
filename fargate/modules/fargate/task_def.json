[
    {
        "name": "${container_name}",
        "image": "${account_id}.dkr.ecr.us-east-1.amazonaws.com/${container_name}:latest",
        "cpu": 0,
        "portMappings": [
        {
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp"
        }
        ],
        "essential": true,
        "entryPoint": [
        "npm",
        "start"
        ],
        "mountPoints": [],
        "volumesFrom": [],
        "dnsSearchDomains": [],
        "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "ecs/${environment}-${container_name}",
            "awslogs-region": "${region}",
            "awslogs-stream-prefix": "ecs"
        }
        }
    }
]

